<!DOCTYPE html>
<html lang="en">

<head>
    {{>links}}
    <title>Document</title>
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="enter your city name">
                        <input type="submit" value="search" id="submitbtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">tuesday</p>
                        <p class="today_date"> 18 oct</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get out here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <!-- footer code  -->
    {{>footer}}
</body>

</html>